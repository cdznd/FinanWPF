<Window x:Class="FinanWPF.Views.form_CadastrarConta"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinanWPF.Views"
        mc:Ignorable="d"
        Title="form_CadastrarConta" Height="450" Width="800">
    
    <Grid>

        <!-- Name Input -->
        <TextBox x:Name="input_ContaNome"
                 HorizontalAlignment="Left"
                 Margin="60,105,0,0" 
                 TextWrapping="Wrap"
                 VerticalAlignment="Top"
                 Width="120"/>

        <!-- CPF Input -->
        <TextBox x:Name="input_ContaCPF"
                 HorizontalAlignment="Left"
                 Margin="60,185,0,0" 
                 TextWrapping="Wrap"
                 VerticalAlignment="Top"
                 Width="120"/>

        <!-- Submit -->
        <Button x:Name="btn_CadastrarConta"
                Content="Submit" 
                HorizontalAlignment="Left"
                Margin="60,264,0,0" 
                VerticalAlignment="Top" Click="btn_CadastrarConta_Click"/>

    </Grid>
    
</Window>
