<Window x:Class="FinanWPF.Views.Crud.UpdateView.form_UpdateCategoria"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinanWPF.Views.Crud.UpdateView"
        mc:Ignorable="d"
        Title="form_UpdateCategoria" Height="450" Width="800">
    <Grid>
        
        <!-- Name Input -->
        <TextBox x:Name="input_CategoriaNome"
                 HorizontalAlignment="Left"
                 Margin="60,105,0,0" 
                 TextWrapping="Wrap"
                 VerticalAlignment="Top"
                 Width="120"/>

        <!-- Submit -->
        <Button x:Name="btn_CadastrarCategoria"
                Content="Submit" 
                HorizontalAlignment="Left"
                Margin="60,264,0,0" 
                VerticalAlignment="Top"/>
        
    </Grid>
</Window>
